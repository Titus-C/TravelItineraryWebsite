@page "/destinations/details"
@using Microsoft.EntityFrameworkCore
@using TravelItineraryWebsite.Domain
@inject IDbContextFactory<TravelItineraryWebsite.Data.TravelItineraryWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Destination</h2>
    <hr />
    @if (destination is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">DestinationName</dt>
            <dd class="col-sm-10">@destination.DestinationName</dd>
            <dt class="col-sm-2">DestinationLocation</dt>
            <dd class="col-sm-10">@destination.DestinationLocation</dd>
            <dt class="col-sm-2">DestinationDescription</dt>
            <dd class="col-sm-10">@destination.DestinationDescription</dd>
            <dt class="col-sm-2">ItineraryDetailId</dt>
            <dd class="col-sm-10">@destination.ItineraryDetailId</dd>
            <dt class="col-sm-2">ActivityId</dt>
            <dd class="col-sm-10">@destination.ActivityId</dd>
            <dt class="col-sm-2">TransportId</dt>
            <dd class="col-sm-10">@destination.TransportId</dd>
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@destination.DateCreated</dd>
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@destination.DateUpdated</dd>
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@destination.CreatedBy</dd>
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@destination.UpdatedBy</dd>
        </dl>
        <div>
            <a href="@($"/destinations/edit?destinationid={destination.DestinationId}")">Edit</a> |
            <a href="@($"/destinations")">Back to List</a>
        </div>
    }
</div>

@code {
    private Destination? destination;

    [SupplyParameterFromQuery]
    private int DestinationId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        destination = await context.Destination.FirstOrDefaultAsync(m => m.DestinationId == DestinationId);

        if (destination is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
