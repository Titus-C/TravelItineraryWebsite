@page "/destinations/edit"
@using Microsoft.EntityFrameworkCore
@using TravelItineraryWebsite.Domain
@inject IDbContextFactory<TravelItineraryWebsite.Data.TravelItineraryWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Destination</h2>
<hr />
@if (Destination is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Destination" OnValidSubmit="UpdateDestination" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Destination.DestinationId" value="@Destination.DestinationId" />
                <div class="mb-3">
                    <label for="destinationname" class="form-label">DestinationName:</label>
                    <InputText id="destinationname" @bind-Value="Destination.DestinationName" class="form-control" />
                    <ValidationMessage For="() => Destination.DestinationName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="destinationlocation" class="form-label">DestinationLocation:</label>
                    <InputText id="destinationlocation" @bind-Value="Destination.DestinationLocation" class="form-control" />
                    <ValidationMessage For="() => Destination.DestinationLocation" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="destinationdescription" class="form-label">DestinationDescription:</label>
                    <InputText id="destinationdescription" @bind-Value="Destination.DestinationDescription" class="form-control" />
                    <ValidationMessage For="() => Destination.DestinationDescription" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="itinerarydetailid" class="form-label">ItineraryDetailId:</label>
                    <InputNumber id="itinerarydetailid" @bind-Value="Destination.ItineraryDetailId" class="form-control" />
                    <ValidationMessage For="() => Destination.ItineraryDetailId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="activityid" class="form-label">ActivityId:</label>
                    <InputNumber id="activityid" @bind-Value="Destination.ActivityId" class="form-control" />
                    <ValidationMessage For="() => Destination.ActivityId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="transportid" class="form-label">TransportId:</label>
                    <InputNumber id="transportid" @bind-Value="Destination.TransportId" class="form-control" />
                    <ValidationMessage For="() => Destination.TransportId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="Destination.DateCreated" class="form-control" />
                    <ValidationMessage For="() => Destination.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="Destination.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => Destination.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="Destination.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => Destination.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="Destination.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => Destination.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/destinations">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int DestinationId { get; set; }

    [SupplyParameterFromForm]
    private Destination? Destination { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Destination ??= await context.Destination.FirstOrDefaultAsync(m => m.DestinationId == DestinationId);

        if (Destination is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateDestination()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Destination!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!DestinationExists(Destination!.DestinationId))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/destinations");
    }

    private bool DestinationExists(int destinationid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Destination.Any(e => e.DestinationId == destinationid);
    }
}
